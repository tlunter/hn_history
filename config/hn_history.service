[Unit]
Description=Foreman
After=syslog.target

[Service]
User=tlunter
WorkingDirectory=/opt/hn_history
ExecStart=/usr/bin/zsh -lc 'RACK_ENV=production rbenv exec bundle exec foreman start'
Restart=always
StandardInput=null
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=%n
KillMode=process

[Install]
WantedBy=multi-user.target
